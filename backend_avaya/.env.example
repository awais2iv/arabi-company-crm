# Database Configuration
MONGO_DB_URI=mongodb://localhost:27017
PORT=8000

# JWT Secrets (IMPORTANT: Change these in production!)
REFRESH_TOKEN_SECRET=your_refresh_token_secret_change_in_production
ACCESS_TOKEN_SECRET=your_access_token_secret_change_in_production
OTP_TOKEN_SECRET=your_otp_token_secret_change_in_production

# Token Expiry
ACCESS_TOKEN_EXPIRY=8h
REFRESH_TOKEN_EXPIRY=8h
OTP_TOKEN_EXPIRY=5m

# Environment
NODE_ENV=development

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# SMTP Configuration (for email)
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Redis Configuration (optional)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Additional service configurations
# Add your service-specific environment variables here
